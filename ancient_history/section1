    <script>
        function showTab(tabId) {
            document.querySelectorAll('.container-card').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.nav-btn').forEach(el => el.classList.remove('active'));
            
            document.getElementById(tabId).classList.add('active');
            document.getElementById('btn-' + tabId.replace('sec-', '')).classList.add('active');
            
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        document.addEventListener('DOMContentLoaded', () => showTab('sec-1'));
    </script>
